<?xml version="1.0" encoding="utf-8"?><odoo>    <data>       <!-- Inherit Form View to Modify it -->       <record id="account_move_inherit_form" model="ir.ui.view">           <field name="name">account.move.inherit</field>           <field name="model">account.move</field>           <field name="inherit_id" ref="account.view_move_form"/>           <field name="arch" type="xml">               <xpath expr="//page[@name='other_info']/group/group[@name='accounting_info_group']/field[@name='auto_post']" position="replace">                                        <field name="auto_post" attrs="{'readonly': ['|',('reversed_entry_id', '!=', False),('state','!=','draft')],'invisible': [('move_type', 'in', ('in_receipt','in_invoice','in_refund'))]}"/>			   </xpath>               <xpath expr="//group[@id='header_right_group']/field[@name='date']" position="after">                                        <field name="auto_post"                                               attrs="{'readonly': ['|',('reversed_entry_id', '!=', False),('state','!=','draft')],'invisible': [('move_type', 'in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>                   <field name="default_tags_ids" widget="many2many_tags"/>               </xpath>           </field>       </record>    </data></odoo>