<?xml version="1.0" encoding="utf-8"?><odoo>    <data>       <!-- Inherit Form View to Modify it -->       <record id="employee_form_inherit" model="ir.ui.view">           <field name="name">hr.employee.form.inherit</field>           <field name="model">hr.employee</field>           <field name="inherit_id" ref="hr.view_employee_form"/>           <field name="arch" type="xml">               <xpath expr="//page[@name='personal_information']/group/group[2]/field[@name='passport_id']" position="replace">				   <field name="passport_id" invisible="1"/>			   </xpath>			   <xpath expr="//page[@name='personal_information']/group/group[7]" position="after"><group string="Passport">	<field name="passport_id"/>	<field name="passport_start_date"/>	<field name="passport_end_date"/></group>				   <group string="Accommodation">	<field name="accommodation_start_date"/>	<field name="accommodation_end_date"/></group>			   </xpath>           </field>       </record>    </data></odoo>